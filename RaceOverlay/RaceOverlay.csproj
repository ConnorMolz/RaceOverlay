<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <PublishReadyToRun>true</PublishReadyToRun>
        <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <Version>0.6.1</Version>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="IRSDKSharper" Version="1.1.3" />
      <PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.8" />
      <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.3.0" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.3" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
      <PackageReference Include="SharpVectors" Version="1.8.4.2" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Resources\LICENSE" />
        <EmbeddedResource Include="Resources\LICENSE" />
        <None Remove="Resources\Manual" />
        <EmbeddedResource Include="Resources\Manual" />
        <None Remove="API\Overlays\Inputs\Inputs.html" />
        <EmbeddedResource Include="API\Overlays\Inputs\Inputs.html" />
        <None Remove="Resources\SetupHider.jpg" />
        <EmbeddedResource Include="Resources\SetupHider.jpg" />
        <None Remove="API\Overlays\SetupHider\SetupHider.html" />
        <EmbeddedResource Include="API\Overlays\SetupHider\SetupHider.html" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Overlays\Inputs\wheel.svg" />
      <Resource Include="Overlays\Inputs\wheel.svg" />
    </ItemGroup>
    
</Project>
