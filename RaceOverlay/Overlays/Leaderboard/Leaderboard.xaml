<internals:Overlay x:Class="RaceOverlay.Overlays.Leaderboard.Leaderboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RaceOverlay.Overlays.Leaderboard"
        xmlns:internals="clr-namespace:RaceOverlay.Internals"
        mc:Ignorable="d"
        Title="Leaderboard" Height="{Binding _windowHeight}" Width="{Binding _windowWidth}"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Topmost="True"
        Foreground="White">
    <Border CornerRadius="10" Background="#FF1E1E1E">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ContentScaleTransform" ScaleX="1" ScaleY="1" />
        </Grid.LayoutTransform>
        
        <Grid Grid.Row="0" Grid.Column="0" Height="25" Name="Header" Background="#FF2E2E2E" Margin="0, 0, 0, 10">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Padding="5"
                           Name="TimeOrLaps"></TextBlock>
                
                <TextBlock
                           Name="IncidentsText"
                           HorizontalAlignment="Right"
                           Padding="5">
                </TextBlock>
                
                <TextBlock
                    Name="AirTempText"
                    HorizontalAlignment="Right"
                    Padding="5">
                </TextBlock>
                
                <TextBlock
                    Name="TrackTempText"
                    HorizontalAlignment="Right"
                    Padding="5">
                </TextBlock>
                
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="0" Grid.Column="0" Name="Body">
            
        </Grid>
        
    </Grid>
    </Border>
</internals:Overlay>
