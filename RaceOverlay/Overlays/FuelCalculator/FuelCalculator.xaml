<internals:Overlay x:Class="RaceOverlay.Overlays.FuelCalculator.FuelCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RaceOverlay.Overlays.FuelCalculator"
        xmlns:internals="clr-namespace:RaceOverlay.Internals"
        mc:Ignorable="d"
        Title="FuelCalculator"
        Height="{Binding windowHeight}" Width="{Binding windowWidth}"
        Background="Transparent"
        Foreground="White"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Topmost="True">
    <Border Background="#FF1E1E1E" CornerRadius="10">
        <Grid>
            <Grid.LayoutTransform>
                <ScaleTransform x:Name="ContentScaleTransform" ScaleX="1" ScaleY="1" />
            </Grid.LayoutTransform>
            
            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" Grid.ColumnSpan="2" Width="300" 
                           Height="30" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle Grid.Column="0" x:Name="DeltaBarPositive"
                           Width="0" 
                           Height="30" 
                           Fill="#FFFF0000"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"/>
                <Rectangle Grid.Column="1" x:Name="DeltaBarNegative"
                           Width="75" 
                           Height="30" 
                           Fill="#FF009900"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"/>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Name="DeltaText"
                           Text="-0.500"
                           Foreground="White"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                >
                    
                </TextBlock>
            </Grid>
            
        </Grid>
    </Border>
</internals:Overlay>