<Window x:Class="RaceOverlay.Overlays.Inputs.Inputs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telemetry Display" Height="130" Width="180"
        Background="#FF1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        

        <!-- Middle section with vertical bars -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Margin="10,0"
                    VerticalAlignment="Bottom">
            <!-- Bar 1 -->
            <Grid Height="100">
                <Rectangle Width="10" 
                           Height="100" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle Width="10" 
                           Height="70" 
                           Fill="#FF333333"
                           VerticalAlignment="Bottom"/>
            </Grid>
            
            <!-- Bar 2 -->
            <Grid Height="100" Margin="5,0">
                <Rectangle Width="10" 
                           Height="100" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle Width="10" 
                           Height="80" 
                           Fill="#FF333333"
                           VerticalAlignment="Bottom"/>
            </Grid>
            
            <!-- Bar 3 with background -->
            <Grid Height="100">
                <Rectangle Width="10" 
                           Height="100" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle x:Name="BarLevel"
                           Width="10" 
                           Height="75" 
                           Fill="#FF4CAF50"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </StackPanel>

        <!-- speed display -->
        <Grid Grid.Column="2">
            <Ellipse Stroke="White" 
                     StrokeThickness="2" 
                     Width="80" 
                     Height="80"/>
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock x:Name="SpeedText"
                         Text="4" 
                         Foreground="White" 
                         FontSize="24" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="kph" 
                         Foreground="White" 
                         FontSize="12" 
                         HorizontalAlignment="Center"/>
                <TextBlock x:Name="SpeedSubText"
                         Text="124" 
                         Foreground="White" 
                         FontSize="12" 
                         HorizontalAlignment="Center"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>