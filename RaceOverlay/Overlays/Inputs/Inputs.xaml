<internals:Overlay x:Class="RaceOverlay.Overlays.Inputs.Inputs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:internals="clr-namespace:RaceOverlay.Internals"
        Title="Inputs" Height="{Binding _windowHeight}" Width="{Binding _windowWidth}"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Topmost="True">
    <Border CornerRadius="10" Background="#FF1E1E1E">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ContentScaleTransform" ScaleX="1" ScaleY="1" />
        </Grid.LayoutTransform>

        <!-- section with speed-->
        <StackPanel Grid.Column="0" 
                    Orientation="Vertical" 
                    Margin="0,0,3,0"
                    VerticalAlignment="Bottom">
            <TextBlock Name="SpeedText"
                       Text="278"
                       FontSize="20" 
                       Foreground="White"/>
            <TextBlock Foreground="White" FontSize="7" Text="Km/h"></TextBlock>
            </StackPanel>
        
        <!-- section with input bars -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Margin="3,0"
                    VerticalAlignment="Bottom">
            <!-- Bar 1 (Clutch) -->
            <Grid Height="50">
                <Rectangle Width="7" 
                           Height="50" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle x:Name="ClutchBar"
                           Width="7" 
                           Height="40" 
                           Fill="#FF0000FF"
                           VerticalAlignment="Bottom"/>
            </Grid>
            
            <!-- Bar 2 (Brake)-->
            <Grid Height="50" Margin="5,0">
                <Rectangle Width="7" 
                           Height="50" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle x:Name="BrakeBar"
                           Width="7" 
                           Height="20" 
                           Fill="#FFFF0000"
                           VerticalAlignment="Bottom"/>
            </Grid>
            
            <!-- Bar 3 (Throttle) -->
            <Grid Height="50">
                <Rectangle Width="7" 
                           Height="50" 
                           Fill="#FF2A2A2A"/>  
                <Rectangle x:Name="ThrottleBar"
                           Width="7" 
                           Height="50" 
                           Fill="#FF00FF00"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </StackPanel>

        <!-- gear display -->
        <TextBlock Grid.Column="2" Name="GearText" Text="2" Foreground="White" FontSize="40" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
        
        <!-- Steering Wheel -->
        <Grid Grid.Column="3" Width="40" Height="40" Margin="5,0,0,0" VerticalAlignment="Center" Name="SteeringWheelGrid">
            <Viewbox RenderTransformOrigin="0.5,0.5">
                <Path Width="40" Height="40" Stretch="Uniform" Data="M 247.44179,46.557852 C 151.47822,50.244921 68.662649,114.97029 41.901952,207.20082 c -26.760719,92.23053 8.54934,191.23013 87.636328,245.7082 11.86848,8.17539 25.94062,12.55313 40.35235,12.55313 57.40625,0 114.8125,0 172.21875,0 14.41173,0 28.48385,-4.37774 40.35233,-12.55313 79.08701,-54.47807 114.39705,-153.47767 87.63634,-245.7082 C 443.33733,114.97029 360.5218,50.244921 264.55821,46.557852 c -6.34618,-0.0054 -10.91379,-0.04218 -17.11642,0 z m 7.89492,52.811722 0.007,0 0.007,0 c 0.44628,0.0379 0.88351,0.0185 1.29845,0 l 0.007,0 0.007,0 c 76.35161,0.2981 143.1355,51.479266 163.27265,125.128126 -0.64112,0.17646 -0.64187,0.17656 0,8e-4 1.2929,4.72868 -2.27665,9.40547 -7.17891,9.40547 l -156.75703,0 -156.75703,0 c -4.902251,0 -8.471807,-4.67679 -7.178903,-9.40547 0.641868,0.17538 0.641112,0.17528 0,-8e-4 C 112.2012,150.84884 178.98544,99.667674 255.33671,99.369574 Z M 94.915229,284.44614 c 0.615531,-0.0108 1.246671,0.055 1.883211,0.20741 60.33773,14.44715 108.88138,59.1281 128.26992,118.06407 1.58106,4.80606 -2.01163,9.76992 -7.0711,9.76992 l -48.10663,0 c -3.67888,0 -7.27113,-1.11699 -10.30079,-3.20391 -39.2036,-27.0047 -65.283959,-69.21483 -71.895707,-116.35781 -0.636348,-4.5373 2.91246,-8.40137 7.221096,-8.47968 z m 322.169531,0 c 4.30865,0.0784 7.85745,3.94238 7.2211,8.47968 -6.61174,47.14298 -32.69211,89.35311 -71.89571,116.35781 -3.02965,2.08692 -6.6219,3.20391 -10.30077,3.20391 l -48.10665,0 c -5.05945,0 -8.65217,-4.96386 -7.07108,-9.76992 19.3885,-58.93597 67.93217,-103.61692 128.26992,-118.06407 0.63653,-0.1524 1.26768,-0.21857 1.88319,-0.20741 z" Fill="White">
