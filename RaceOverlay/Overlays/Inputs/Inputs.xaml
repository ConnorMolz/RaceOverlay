<Window x:Class="RaceOverlay.Overlays.Inputs.Inputs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telemetry Display" Height="150" Width="600"
        Background="#FF1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Left section with line graph -->
        <Border Grid.Column="0" 
                BorderBrush="#FF333333" 
                BorderThickness="1" 
                Background="#FF252525">
            <Canvas x:Name="GraphCanvas" Height="100">
                <Polyline x:Name="GreenLine" 
                         Stroke="LimeGreen" 
                         StrokeThickness="2"/>
                <Polyline x:Name="RedLine" 
                         Stroke="Red" 
                         StrokeThickness="2"/>
            </Canvas>
        </Border>

        <!-- Middle section with vertical bars -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Margin="10,0">
            <Rectangle Width="10" 
                       Height="100" 
                       Fill="#FF333333"/>
            <Rectangle Width="10" 
                       Height="100" 
                       Fill="#FF333333" 
                       Margin="5,0"/>
            <Rectangle Width="10" 
                       Height="100" 
                       Fill="#FF4CAF50"/>
        </StackPanel>

        <!-- Right section with speed display -->
        <Grid Grid.Column="2">
            <Ellipse Stroke="White" 
                     StrokeThickness="2" 
                     Width="80" 
                     Height="80"/>
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock Text="4" 
                         Foreground="White" 
                         FontSize="24" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="kph" 
                         Foreground="White" 
                         FontSize="12" 
                         HorizontalAlignment="Center"/>
                <TextBlock Text="124" 
                         Foreground="White" 
                         FontSize="12" 
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>