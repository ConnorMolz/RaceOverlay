                        <RotateTransform x:Name="SteeringRotation" Angle="0" CenterX="20" CenterY="20"/>
                    </Path.RenderTransform>
                </Path>
            </Viewbox>
        </Grid>
        
    </Grid>
    </Border>
</internals:Overlay>